{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall -Wextra -Werror",
                "-g",
                "${fileDirname}/main.c",
                "${fileDirname}/libftprintf.a",
                "${fileDirname}/util_print.c",
                "${fileDirname}/util_print2.c",
                "${fileDirname}/util_option.c",
                "${fileDirname}/process.c",
                "${fileDirname}/counter.c",
                "${fileDirname}/ft_printf.h",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ],
    "version": "2.0.0"
}